<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="@dimen/_134sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:minWidth="@dimen/_120sdp"
    android:background="@drawable/layout_shape"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/origin"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="vs"
        android:textColor="#80EAEAEA"
        android:textSize="@dimen/_11sdp"
        android:letterSpacing="0.01"
        app:layout_constraintBottom_toTopOf="@+id/origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivTeam1"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/origin"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/team1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:text="team1"
        android:maxLines="1"
        android:maxLength="8"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ivTeam1"
        app:layout_constraintStart_toStartOf="@+id/ivTeam1"
        app:layout_constraintTop_toBottomOf="@+id/ivTeam1"
        android:layout_marginTop="@dimen/_5sdp"/>


    <TextView
        android:id="@+id/team1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani_semibold"
        android:textStyle="bold"
        android:text="1"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintEnd_toEndOf="@+id/team1Name"
        app:layout_constraintStart_toStartOf="@+id/team1Name"
        app:layout_constraintTop_toBottomOf="@+id/team1Name" />


    <ImageView
        android:id="@+id/ivTeam2"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/origin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/inter_medium"
        android:text="team1"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ivTeam2"
        app:layout_constraintStart_toStartOf="@+id/ivTeam2"
        app:layout_constraintTop_toBottomOf="@+id/ivTeam1" />


    <TextView
        android:id="@+id/team2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rajdhani_semibold"
        android:textStyle="bold"
        android:text="1"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="@+id/team2Name"
        app:layout_constraintStart_toStartOf="@+id/team2Name"
        app:layout_constraintTop_toBottomOf="@+id/team2Name" />


    <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintBottom_toBottomOf="@+id/team1Score"
        app:layout_constraintEnd_toStartOf="@+id/team2Score"
        app:layout_constraintStart_toEndOf="@+id/team1Score"
        app:layout_constraintTop_toBottomOf="@+id/team1Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/bottom_shape">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BET NOW"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
