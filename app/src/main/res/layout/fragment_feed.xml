<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FeedFragment"
        android:paddingStart="10dp"
        android:background="@color/primaryColor">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/primaryColor">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:paddingTop="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_app_logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/notificationBtn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_notification"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="@dimen/_12sdp" />


                    <ImageView
                        android:id="@+id/walletBtn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_wallet"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/notificationBtn"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">


                        <LinearLayout
                            android:id="@+id/llFootball"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/background_selected"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivFootball"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/soccer" />

                            <TextView
                                android:id="@+id/tvFootball"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:text="Football"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/llCricket"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/background_not_selected"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/constraintLayout2"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivCricket"
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_cricket" />

                            <TextView
                                android:id="@+id/tvCricket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:text="Cricket"
                                android:textColor="@color/white"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout2"
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/background_gradient"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/_10sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/ic_starts"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/inter_medium"
                                android:text="Adding Soon"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView3"
                                app:layout_constraintTop_toTopOf="parent" />


                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="@dimen/_28sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_formula"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="@dimen/_5sdp" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:letterSpacing="0.01"
                        android:background="@drawable/custom_shape"
                        android:paddingTop="@dimen/_2sdp"
                        android:fontFamily="@font/inter_medium"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingHorizontal="@dimen/_6sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live matches"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#DDE3F0"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_5sdp" />


                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/matchRV"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_marginTop="@dimen/_5sdp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔥  Most Happening Tickr"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textColor="#DDE3F0"
                    android:letterSpacing="0.01"
                    android:paddingTop="@dimen/_2sdp"
                    android:fontFamily="@font/inter_medium"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_6sdp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mostHappeningRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bettaCoin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_82sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/main_gradient"
                    android:layout_marginEnd="12dp">


                    <TextView
                        android:id="@+id/coinText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:fontFamily="@font/inter"
                        android:text="Betta coins get you rewards"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="#121212"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent=".7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tap this to explore reqards and streaks"
                        android:textColor="#513171"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal"
                        app:layout_constraintStart_toStartOf="@+id/coinText"
                        app:layout_constraintTop_toBottomOf="@+id/coinText" />


                    <ImageView
                        android:id="@+id/mainCoin"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_coin"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewRight"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/bottomCoin"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:src="@drawable/bottom_coin"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageViewRight" />


                    <ImageView
                        android:id="@+id/imageViewRight"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:src="@drawable/right_coin"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_15sdp" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:letterSpacing="0.01"

                        android:paddingHorizontal="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="🔥  Rapid Fire"
                        android:textColor="#DDE3F0"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="5 Questions"
                        android:textColor="#99FFFFFF"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginEnd="12dp"
                        android:letterSpacing="0.01"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    
                </androidx.constraintlayout.widget.ConstraintLayout>
         



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_170sdp">


                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_9sdp"
                        android:background="@drawable/rotated_shape"
                        android:backgroundTint="#F87871"
                        android:rotation="5"

                        app:layout_goneMarginTop="@dimen/_4sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="@dimen/_18sdp"/>


                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/rotated_shape"
                        android:backgroundTint="#55C3FF"
                        android:rotation="-7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent=".4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/rapid_fire_gradient"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">


                        <com.example.assignment.utils.CustomGradientTextView
                            android:id="@+id/questionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Will the home team win the match?"
                            android:fontFamily="@font/rajdhani_semibold"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_5sdp">

                            <ImageView
                                android:id="@+id/icRapidCoin"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:src="@drawable/rapic_coin"
                                android:layout_marginTop="@dimen/_3sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/inter"
                                android:letterSpacing="0.01"
                                android:text="50 Coins"
                                android:textColor="#FFDD80"
                                android:textSize="@dimen/_14sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/icRapidCoin"
                                app:layout_constraintTop_toTopOf="parent" />


                            <ImageView
                                android:id="@+id/firstMark"
                                android:layout_width="@dimen/_13ssp"
                                android:layout_height="@dimen/_13ssp"
                                android:src="@drawable/ic_selected_rapid"
                                android:layout_marginBottom="-8dp"
                                android:elevation="@dimen/_5sdp"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="@+id/centerL"
                                app:layout_constraintStart_toStartOf="@+id/linearLayout2" />


                            <TextView
                                android:id="@+id/centerL"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintEnd_toStartOf="@+id/center"
                                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout2" />


                            <ImageView
                                android:id="@+id/secondMark"
                                android:layout_width="@dimen/_13ssp"
                                android:layout_height="@dimen/_13ssp"
                                android:src="@drawable/ic_selected_rapid"
                                android:layout_marginBottom="-8dp"
                                android:elevation="@dimen/_5sdp"
                                android:visibility="gone"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="@+id/center"
                                app:layout_constraintStart_toStartOf="@+id/centerL" />





                            <TextView
                                android:id="@+id/center"
                                android:layout_width="1dp"
                                android:layout_height="1dp"

                                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

                            <ImageView
                                android:id="@+id/thirdMark"
                                android:layout_width="@dimen/_13ssp"
                                android:layout_height="@dimen/_13ssp"
                                android:src="@drawable/ic_selected_rapid"
                                android:layout_marginBottom="-8dp"
                                android:visibility="gone"
                                android:elevation="@dimen/_5sdp"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="@+id/centerR"
                                app:layout_constraintStart_toStartOf="@+id/center" />



                            <TextView
                                android:id="@+id/centerR"
                                android:layout_width="1dp"
                                android:layout_height="1dp"
                                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                                app:layout_constraintStart_toEndOf="@+id/center"
                                app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

                            <ImageView
                                android:id="@+id/forthMark"
                                android:layout_width="@dimen/_13ssp"
                                android:layout_height="@dimen/_13ssp"
                                android:src="@drawable/ic_selected_rapid"
                                android:layout_marginBottom="-8dp"
                                android:visibility="gone"
                                android:elevation="@dimen/_5sdp"
                                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                                app:layout_constraintStart_toStartOf="@+id/centerR" />

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:background="@drawable/custom_rapid_fire_shape"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView3"
                                app:layout_constraintTop_toTopOf="parent">


                                <TextView
                                    android:id="@+id/firstBox"
                                    style="@style/rapidFirePoints"
                                    android:text="1x"
                                    android:background="@drawable/selected_rapid_shape"/>

                                <TextView
                                    android:id="@+id/secondBox"
                                    style="@style/rapidFirePoints"
                                    android:text="2x" />

                                <TextView
                                    android:id="@+id/thirdBox"
                                    style="@style/rapidFirePoints"
                                    android:text="5x" />


                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/forthBox"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2">

                                    <TextView
                                        style="@style/rapidFirePoints"
                                        android:text="10x"
                                        android:textSize="@dimen/_13sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>


                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_fire"
                                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                                app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                                app:layout_constraintTop_toTopOf="parent" />




                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:weightSum="2.8"
                            android:layout_gravity="center"
                            android:gravity="center">



                            <com.example.assignment.utils.CustomGradientTextView
                                android:id="@+id/tvYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_rapid_ans"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="YES"
                                android:textSize="@dimen/_18sdp"
                                android:fontFamily="@font/rajdhani_semibold"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:layout_weight="1"/>



                            <com.example.assignment.utils.CustomGradientTextView
                                android:id="@+id/tvNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/layout_rapid_ans"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="NO"
                                android:textSize="@dimen/_18sdp"
                                android:fontFamily="@font/rajdhani_semibold"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:paddingBottom="@dimen/_2sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_weight="1"/>


                            <TextView
                                android:id="@+id/tvSkip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#EFEFEF"
                                android:text="SKIP"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:fontFamily="@font/inter_medium"
                                android:textSize="@dimen/_13ssp"
                                android:letterSpacing="0.01"
                                android:layout_weight=".6"/>








                        </LinearLayout>




                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"

                        android:letterSpacing="0.01"
                        android:paddingHorizontal="@dimen/_6sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="Match Preview"
                        android:textColor="#DDE3F0"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="View All"
                        android:textColor="#FF7300"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginEnd="12dp"
                        android:letterSpacing="0.01"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/matchPreviewRv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_marginBottom="@dimen/_100sdp" />

            </LinearLayout>


        </ScrollView>


    </FrameLayout>
</layout>